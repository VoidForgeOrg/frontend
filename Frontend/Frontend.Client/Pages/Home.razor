@page "/"

<PageTitle>Home</PageTitle>
<MudGrid>
    <MudItem xs="3">
        <MudPaper Height="90vh" Class="d-flex flex-column align-start justify-start mud-width-full blue- py-1">
            <MudCard Outlined="true" Class="mud-width-full">
                <MudCardActions Class="mud-width-full blue darken-4 mx-auto">
                    <MudButton Class="mud-width-full" Variant="Variant.Text" Color="Color.Primary">Sectors</MudButton>
                </MudCardActions>
            </MudCard>
            <MudCard Outlined="true" Class="mud-width-full px-2">
                <MudCardActions Class="mud-width-full mx-auto">
                    <MudButton Class="mud-width-full" Variant="Variant.Text" Color="Color.Primary">Todo</MudButton>
                </MudCardActions>
            </MudCard>
            <MudCard Outlined="true" Class="mud-width-full px-2">
                <MudCardActions Class="mud-width-full mx-auto">
                    <MudButton Class="mud-width-full" Variant="Variant.Text" Color="Color.Primary">Colonization</MudButton>
                </MudCardActions>
            </MudCard>
            <MudCard Outlined="true" Class="mud-width-full px-2">
                <MudCardActions Class="mud-width-full mx-auto">
                    <MudButton Class="mud-width-full" Variant="Variant.Text" Color="Color.Primary">Trade</MudButton>
                </MudCardActions>
            </MudCard>
            <MudCard Outlined="true" Class="mud-width-full px-2">
                <MudCardActions Class="mud-width-full mx-auto">
                    <MudButton Class="mud-width-full" Variant="Variant.Text" Color="Color.Primary">Research</MudButton>
                </MudCardActions>
            </MudCard>
        </MudPaper>
    </MudItem>


    <MudItem xs="6">
        <MudPaper Height="90vh" Class="d-flex align-start justify-start mud-width-full">
            <MudImage Fluid="true" Src="images/GalaxyMap.webp" Alt="Galaxy Map"
                      Style="object-fit: cover; width: 100%; height: 100%;" />
        </MudPaper>
    </MudItem>
    <MudItem xs="3">
        <MudPaper Height="90vh" Class="d-flex flex-column align-start justify-start mud-width-full py-1">
            <!-- MOCKS!!!, content will be added here dynamically -->
            <MudAlert Class="mud-width-full" Severity="Severity.Normal">The reactor type is RBMK-1000</MudAlert>
            <MudAlert Class="mud-width-full" Severity="Severity.Info">Planet Ultima III colonized successfully!</MudAlert>
            <MudAlert Class="mud-width-full" Severity="Severity.Success">Research Completed!</MudAlert>
            <MudAlert Class="mud-width-full" Severity="Severity.Warning">Running low on Element Zero!</MudAlert>
            <MudAlert Class="mud-width-full" Severity="Severity.Error">The cycle continues</MudAlert>
        </MudPaper>
    </MudItem>
</MudGrid>