@page "/Sectors"
@inject NavigationManager NavigationManager
<MudGrid>
    <MudItem xs="3">
        <MudPaper Height="90vh" Class="d-flex flex-column align-start justify-start mud-width-full blue- py-1">
            @foreach (var sector in _sectors)
            {
                <MudCard Outlined="true" Class="mud-width-full">
                    <MudCardActions Class="mud-width-full mx-auto">
                        <MudButton Class="mud-width-full" Variant="Variant.Text" Color="Color.Primary" Href="/Sectors">
                            @sector
                        </MudButton>
                    </MudCardActions>
                </MudCard>
            }
        </MudPaper>
    </MudItem>


    <MudItem xs="6">
        <MudPaper Height="90vh" Class="d-flex align-start justify-start mud-width-full">
            <MudImage Fluid="true" Src="images/GalaxyMap.webp" Alt="Galaxy Map"
                      Style="object-fit: cover; width: 100%; height: 100%;"/>
        </MudPaper>
    </MudItem>
    <MudItem xs="3">
        <MudPaper Height="90vh" Class="d-flex flex-column align-start justify-start mud-width-full py-1">
            @foreach (var system in _systems)
            {
                <MudCard Outlined="true" Class="mud-width-full">
                    <MudCardActions Class="mud-width-full mx-auto">
                        <MudButton Class="mud-width-full" Variant="Variant.Text" Color="Color.Primary" Href="/Sectors">
                            @system
                        </MudButton>
                    </MudCardActions>
                </MudCard>
            }
        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    // mock, will get it from API, depending on their number might also use pagination
    // TBD: filters, search
    private List<String> _sectors = ["Solaris", "Obscurus", "Tempestus"];
    private List<String> _systems = ["Fenris", "Ultramar", "Cadia", "Nocturne", "Caliban", "Krieg"];
    //will need state -> currently selected sector in order to load planets.
    //will need injectable service for sectors & planets
    private void NavigateToSystem(int systemId)
    {
        NavigationManager.NavigateTo($"/systems/{systemId}");
    }
}